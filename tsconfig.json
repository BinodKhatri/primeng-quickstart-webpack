{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "declaration": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "filesGlob": [
        "**/*.ts",
        "!node_modules/**"
    ],
    "files": [
        "app/app.component.d.ts",
        "app/app.component.ts",
        "app/boot.d.ts",
        "app/boot.ts",
        "app/cars/car.d.ts",
        "app/cars/car.ts",
        "app/cars/carservice.d.ts",
        "app/cars/carservice.ts",
        "app/polyfills.d.ts",
        "app/polyfills.ts",
        "app/vendor.d.ts",
        "app/vendor.ts",
        "typings/browser.d.ts",
        "typings/browser/ambient/es6-shim/index.d.ts",
        "typings/browser/ambient/jasmine/index.d.ts",
        "typings/main.d.ts",
        "typings/main/ambient/es6-shim/index.d.ts",
        "typings/main/ambient/jasmine/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
